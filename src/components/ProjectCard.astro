---
import type { Project } from "../types.js";

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a href={project.link} class="project-card">
  <div class="card-content">
    <img src={project.image} alt={project.title} />
    <h3>{project.title}</h3>
    <p>{project.description}</p>
    <div class="tags">
      {project.tags.map(tag => <span class="tag">{tag}</span>)}
    </div>
  </div>
</a>

<style>
  .project-card {
    @apply block rounded-lg border border-skin-line bg-skin-card p-6 transition-all hover:scale-105;
  }
  
  .card-content img {
    @apply mb-4 rounded-lg w-full h-48 object-cover;
  }
  
  .card-content h3 {
    @apply text-xl font-semibold mb-2;
  }
  
  .card-content p {
    @apply text-skin-base mb-4;
  }
  
  .tags {
    @apply flex flex-wrap gap-2;
  }
  
  .tag {
    @apply rounded-full bg-skin-accent px-3 py-1 text-sm text-skin-inverted;
  }
</style> 